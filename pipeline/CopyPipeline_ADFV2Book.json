{
	"name": "CopyPipeline_ADFV2Book",
	"properties": {
		"description": "My first interaction with a Pipeline an Copy activity here on Azure!  ",
		"activities": [
			{
				"name": "Copy_dn0",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Destination",
						"value": "database-bacpac//website-customer"
					}
				],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "SELECT TOP 100\r\n[CustomerID]\r\n,[CustomerName]\r\n,[CustomerCategoryName]\r\n,[PrimaryContact]\r\n,[AlternateContact]\r\n,[PhoneNumber]\r\n,[FaxNumber]\r\n,[BuyingGroupName]\r\n,[WebsiteURL]\r\n,[DeliveryMethod]\r\n,[CityName]\r\nFROM [Website].[Customers]"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSetting",
							"maxConcurrentConnections": 1
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSetting",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_Source_Azure_WWI_CustomersTop100",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DS_Destination_AzureBlobStorage",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}